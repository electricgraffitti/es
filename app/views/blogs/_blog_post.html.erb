<meta content=<%= blog.meta_description %> name="description">
<meta content=<%= blog.meta_keywords %> name="keywords">
<div class="news_listing inner_content">
  <%= image_tag(blog.assets.last.attachment.url(:thumb), :alt => blog.title) %>
  <div class="retweet_links">
    <%#= link_to "#{blog.title}", blog_path(blog), :class => "retweet vert" %>
  </div>

  <div class="listing_title">
    <%= blog.title %>
  </div>

  <div class="listing_sub_title">
    by <%= blog.author %><br/>
    <%= blog.author_title %><br/>
  </div>

  <div class="listing_time">
    Posted on: <%= (blog.created_at).to_s(:pretty) %>
  </div>
  <div class="listing_content">
    <%= markdown(blog.body) %>
  </div>
  <% if current_admin %>
    <div class="field">
      <%= link_to "Edit Post", edit_blog_path(blog) %><br />
    </div>
  <% end %>
</div>
<div class="social">
	<!-- AddThis Button BEGIN -->
	Share this post!
	<div class="addthis_toolbox addthis_default_style ">
		<a class="addthis_button_preferred_1"></a>
		<a class="addthis_button_preferred_2"></a>
		<a class="addthis_button_preferred_3"></a>
		<a class="addthis_button_preferred_4"></a>
		<a class="addthis_button_compact"></a>
		<a class="addthis_counter addthis_bubble_style"></a>
	</div>
	<script type="text/javascript" src="http://s7.addthis.com/js/250/addthis_widget.js#pubid=ra-4e4d7458180c35f7"></script>
	<!-- AddThis Button END -->
</div>