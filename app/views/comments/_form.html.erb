<div class="full_row">
  <div class="column_2">
    <%= form_for(@comment) do |f| %>
      <%= render :partial => 'layouts/error_block', :locals => {:object => @comment} %>
  
      <div class="field">
        <%= f.label :author %><br />
        <%= f.text_field :author %>
      </div>
      <div class="field">
        <%= f.label :body %><br />
        <%= f.text_area :body, :cols => 30, :rows => 10 %>
      </div>
      <div class="field">
        <%= f.submit %>
      </div>
    <% end %>
  </div>
</div>
