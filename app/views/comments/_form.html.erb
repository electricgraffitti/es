<%= form_for(@comment) do |f| %>
  <%= render :partial => 'layouts/error_block', :locals => {:object => @comment} %>
  <div class="field">
    <%= f.label :author %><br />
    <%= f.text_field :author %>
  </div>
  <div class="field">
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
