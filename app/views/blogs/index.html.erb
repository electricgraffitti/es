<% content_for :title do %>
  | Reaction News
<% end %>

<div class="full_row inner_content">
  <h2 class="page_header">Recent News</h2>
  <%= render :partial => 'blogs/blog_post', :locals => {:blog => @blog} %>
</div>

<% if @blogs.length > 1 %>
<div class="full_row inner_content">
  <h2 class="page_header">Archived News</h2>
  <% @blogs.each do |blog| %>
    <% unless blog.id == @blog.id %>
      <%= render :partial => 'micro_post', :locals => {:blog => blog} %>
    <% end %>
  <% end %>
</div>
<% end %>
<div class="cta_row rss_feed right">
  <%= image_tag("feed.png") %>
  <%= link_to "Subscribe to our feed", blogs_url(:rss), :class => "rss_button" %>
</div>

<% content_for :javascripts do %>
  <script type="text/javascript" src="http://s7.addthis.com/js/250/addthis_widget.js#pubid=ra-4e4d7458180c35f7"></script>
<% end %>

