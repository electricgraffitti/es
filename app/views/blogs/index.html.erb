<div class="full_row">
	<h2 class="page_header">The Reactor Core</h2>
	<% @blogs.each do |blog| %>
	<div class="top_hr bottom_hr">
		<%= image_tag(blog.assets.last.attachment.url(:medium), :class => "wrapped_image") %>
		<h3>
			<%= (blog.title).titleize %>
		</h3>
		<div class="sub_title">
			<%= (blog.created_at).to_s(:nice_date) %>
		</div>
		<p>
			<%= blog.body %>
		</p>
	</div>
	<% end %>
</div>