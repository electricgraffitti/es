<div class="full_row">
  <h2 class="page_header">Student Login</h2>
</div>
<div class="full_row no_top">
  <div class="column_2">
    <%= form_for(student_session) do |f| %>
    	<%= render :partial => "layouts/error_block", :locals => {:object => student_session} %>
      <div class="field">
        <%= f.label :username %><br />
        <%= f.text_field :username %>
      </div>
      <div class="field">
        <%= f.label :password %><br />
        <%= f.password_field :password %>
      </div>
      <div class="field checkbox">
        <%= f.check_box :remember_me %> <%= f.label :remember_me %>
      </div>
      <%= f.submit "Login", :class => "btn" %><br/>
      <div class="clear"></div>
    <% end %>
  </div>
</div>